{
  "name": "eslint-json-flat-config-template",
  "version": "0.0.2",
  "description": "A project that demonstrates how to set up ESLint to lint JSON files using flat config files.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "ESLINT_USE_FLAT_CONFIG=true npx eslint --config eslint.config.mjs .",
    "eslint:watch": "nodemon --exec 'ESLINT_USE_FLAT_CONFIG=true npx eslint --config eslint.config.mjs .' --config .config/nodemon.config.json"
  },
